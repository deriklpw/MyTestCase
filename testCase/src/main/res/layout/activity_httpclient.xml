<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    <EditText
        android:id="@+id/http_client_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入下载资源url"/>

    <EditText
        android:id="@+id/http_client_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入保存的绝对路径"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/http_client_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="get"/>

    <Button
        android:id="@+id/http_client_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="post"/>

    <ImageView
        android:id="@+id/http_client_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/http_client_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"/>

</LinearLayout>